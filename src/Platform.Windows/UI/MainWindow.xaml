<Window x:Class="PianoActivityTracker.Platform.Windows.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Piano Activity Tracker"
        Height="720"
        Width="820"
        MinHeight="680"
        MinWidth="760">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Start Session"
                    Width="130"
                    Margin="0,0,10,0"
                    Command="{Binding StartCommand}" />
            <Button Content="Stop Session"
                    Width="130"
                    Command="{Binding StopCommand}" />
        </StackPanel>

        <Border Grid.Row="1" Margin="0,16,0,0" Padding="12" CornerRadius="6" Background="#F2F2F2">
            <StackPanel>
                <TextBlock Text="Status" FontWeight="SemiBold" />
                <TextBlock Text="{Binding StatusText}" FontSize="18" Margin="0,6,0,0" />
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Margin="0,12,0,0" Padding="12" CornerRadius="6" Background="#F7FBFF">
            <StackPanel>
                <TextBlock Text="Accumulated Piano Time" FontWeight="SemiBold" />
                <TextBlock Text="{Binding LiveTimeText}" FontSize="26" Margin="0,6,0,0" />
            </StackPanel>
        </Border>

        <Border Grid.Row="3" Margin="0,12,0,0" Padding="12" CornerRadius="6" Background="#EFF6FF">
            <StackPanel>
                <TextBlock Text="Audio Input" FontWeight="SemiBold" />
                <Viewbox Margin="0,8,0,0" Height="90" Stretch="Fill">
                    <Canvas Width="240" Height="70" Background="#D9E8FF">
                        <Polyline Points="{Binding WaveformPoints}"
                                  Stroke="#1B4D8A"
                                  StrokeThickness="1.5"
                                  Opacity="{Binding WaveformOpacity}"
                                  Visibility="{Binding WaveformVisibility}" />
                    </Canvas>
                </Viewbox>
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="{Binding LastFrameText}" />
                    <TextBlock Text=" • " />
                    <TextBlock Text="{Binding FrameCount}" />
                    <TextBlock Text=" frames" />
                    <TextBlock Text=" • RMS " />
                    <TextBlock Text="{Binding WaveformRms, StringFormat={}{0:0.0000}}" />
                </StackPanel>
                <TextBlock Text="{Binding DebugInfoText}" Margin="0,4,0,0" TextWrapping="Wrap" />
                <TextBlock Text="{Binding DebugRecordingText}" Margin="0,2,0,0" TextWrapping="Wrap" />
                <TextBlock Text="{Binding DebugRawText}" Margin="0,2,0,0" TextWrapping="Wrap" />
                <TextBlock Text="{Binding DebugRawStatsText}" Margin="0,2,0,0" TextWrapping="Wrap" />
                <TextBlock Text="{Binding DebugCallbackText}" Margin="0,2,0,0" TextWrapping="Wrap" />
            </StackPanel>
        </Border>

        <Border Grid.Row="4" Margin="0,12,0,0" Padding="12" CornerRadius="6" Background="#FFF7F0">
            <StackPanel>
                <TextBlock Text="Session Summary" FontWeight="SemiBold" />
                <TextBlock Text="{Binding SummaryText}" Margin="0,6,0,0" TextWrapping="Wrap" />
                <TextBlock Text="{Binding ErrorText}" Margin="0,6,0,0" Foreground="#B00020" TextWrapping="Wrap" />
            </StackPanel>
        </Border>

        <Border Grid.Row="5" Margin="0,12,0,0" Padding="12" CornerRadius="6" Background="#FAFAFA">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Session History" FontWeight="SemiBold" Margin="0,0,0,10" />
                <ListView ItemsSource="{Binding History}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Session" Width="220" DisplayMemberBinding="{Binding SessionDateText}" />
                            <GridViewColumn Header="Total Piano Time" Width="150" DisplayMemberBinding="{Binding TotalTimeText}" />
                            <GridViewColumn Header="Segments" Width="100" DisplayMemberBinding="{Binding SegmentsCount}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </Border>
    </Grid>
</Window>
